	<insert id="insertChatRoom" parameterType="ChatVO" >
		INSERT INTO chatting
			(chatting_name)
	    VALUES 
	        (#{chattingName , jdbcType=VARCHAR})
		<selectKey keyProperty="chattingId" resultType="int" order="AFTER">
        	SELECT MAX(chatting_id) FROM chatting
		</selectKey>
	</insert>
	
 </mapper> 