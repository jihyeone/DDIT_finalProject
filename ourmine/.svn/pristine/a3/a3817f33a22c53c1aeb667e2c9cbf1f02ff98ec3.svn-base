@charset "UTF-8";
* {
	box-sizing: border-box;
}

header {
	display: inline-flex;
	margin-left: 20%;
  } 
 
#contentBody {
	background-color: white;
	border: 1px solid white;
	border-radius: 5%;
	height: 480px;
}

.img_logo {
	margin-top: 20px;
	margin-right: 15px;
	max-width: 130px;    
}

.search_box {
	width: 599.7px;
	height: 50px;
	border: 2px solid #484c7f;	/*#03cf5d*/
	display: flex;
	margin-top: 20px;
	justify-content: space-between;
}

.search_box input {
	width: 552px;
	height: 46px;
	padding-left: 13px;
	padding-right: 13px;
	border: none;
	outline: none;
	font-size: 18px;
}

.search_box button {
	width: 40px;
	height: 47px;
	margin: 0;
	padding: 0;
	border: none;
	background: #484c7f;
}

.search_box i {
	color: white;
	font-size: 22px;
	text-align: center;
}

hr{
	margin-left: 1%;
	margin-right: 1%;
}

.news-item {
  margin-bottom: 20px;
  margin-left: 2%;
}

.news-item h4 {
  font-size: 18px;
  margin-bottom: 10px;
}

.news-item p {
  font-size: 14px;
  color: #555555;
}

.search-results {
  margin-top: 20px;
  height: 350px;
  width: 97%;
  overflow: auto;
}

.search-results::-webkit-scrollbar {
    display: none; /* 크롬, 사파리, 오페라, 엣지 */
}

#btn {
	border: none;
}